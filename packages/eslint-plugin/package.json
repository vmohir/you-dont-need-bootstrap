{
  "name": "eslint-plugin-you-dont-need-bootstrap",
  "version": "0.4.0",
  "description": "ESLint plugin to detect Bootstrap usage and suggest modern CSS alternatives",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "eslint",
    "eslint-plugin",
    "bootstrap",
    "css",
    "modern-css",
    "css-grid",
    "flexbox"
  ],
  "author": "Vahid Mohammadi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vahidmohammadi/you-dont-need-bootstrap.git",
    "directory": "packages/eslint-plugin"
  },
  "bugs": {
    "url": "https://github.com/vahidmohammadi/you-dont-need-bootstrap/issues"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:ci": "vitest run",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/estree": "^1.0.8",
    "@types/estree-jsx": "^1.0.5",
    "eslint": "^9.15.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
