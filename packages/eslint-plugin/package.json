{
  "name": "eslint-plugin-you-dont-need-bootstrap",
  "version": "0.2.0",
  "description": "ESLint plugin to detect Bootstrap usage and suggest modern CSS alternatives",
  "main": "./src/index.cjs",
  "exports": {
    ".": {
      "import": "./src/index.mjs",
      "require": "./src/index.cjs"
    }
  },
  "files": [
    "src"
  ],
  "keywords": [
    "eslint",
    "eslint-plugin",
    "bootstrap",
    "css",
    "modern-css",
    "css-grid",
    "flexbox"
  ],
  "author": "Vahid Mohammadi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vahidmohammadi/you-dont-need-bootstrap.git",
    "directory": "packages/eslint-plugin"
  },
  "bugs": {
    "url": "https://github.com/vahidmohammadi/you-dont-need-bootstrap/issues"
  },
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest run"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": false
}
