{
  "name": "you-dont-need-bootstrap",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Modern CSS alternatives to Bootstrap - Stop reinventing the wheel",
  "repository": {
    "type": "git",
    "url": "https://github.com/vmohir/you-dont-need-bootstrap.git"
  },
  "keywords": [
    "bootstrap",
    "css",
    "modern-css",
    "css-grid",
    "flexbox",
    "utility-classes"
  ],
  "author": "Vahid Mohammadi",
  "license": "MIT",
  "scripts": {
    "lint": "eslint packages/",
    "format": "prettier --write \"**/*.{js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,yml,yaml}\"",
    "test": "vitest",
    "test:ci": "vitest run",
    "build": "echo 'No build needed for JavaScript modules'",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.15.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.4",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
